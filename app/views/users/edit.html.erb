<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label t(:translate, item: t("translates.name")) %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label t(:translate, item: t("translates.email")) %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label t(:translate, item: t("translates.password")) %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label t(:translate, item: t("translates.password_confirmation")),
        t(:translate, item: t("translates.password_confirmation")) %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t(:translate, item: t("translates.save")),
        class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">change</a>
    </div>
  </div>
</div>
