<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.title"), root_path %></li>
        <li><%= link_to t("static_pages.help.title"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t(:translate, item: t("translates.account")) %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:translate, item: t("translates.profile")),
                current_user %></li>
              <li><%= link_to t(:translate, item: t("translates.setting")),
                edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(:translate, item: t("translates.logout")),
                  logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(:translate, item: t("translates.login")),
            login_path %></li>
        <% end %>
        <li><%= link_to_unless I18n.locale == :vn,
          t("static_pages.array_language.al2"), locale: :vn %></li>
        <li><%= link_to_unless I18n.locale == :en,
          t("static_pages.array_language.al1"), locale: :en %></li>
      </ul>
    </nav>
  </div>
</header>
