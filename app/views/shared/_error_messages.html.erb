<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t(:translate, item: t("translates.the_form_contains")) %>
        <%= pluralize(@user.errors.count,
          t(:translate, item: t("translates.error"))) %>.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
