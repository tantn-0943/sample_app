<% provide(:title, "Log in") %>
<h1><%= t(:translate, item: t("translates.login")) %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label t(:translate, item: t("translates.email")) %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label t(:translate, item: t("translates.password")) %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit t(:translate, item: t("translates.login")),
        class: "btn btn-primary" %>
    <% end %>

    <%= link_to t(:translate, item: t("translates.SignUp")),
      signup_path %>
  </div>
</div>
